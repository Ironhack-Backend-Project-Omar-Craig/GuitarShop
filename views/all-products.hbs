<div class="container">
  {{#if allProducts}}
    <h1>All Products</h1>
  {{/if}}
  {{#if acousticGuitars}}
    <h1>Acoustic Guitars</h1>
  {{/if}}
  {{#if electricGuitars}}
    <h1>Electric Guitars</h1>
  {{/if}}
  {{#if bassGuitars}}
    <h1>Bass Guitars</h1>
  {{/if}}
    {{#if pedals}}
