  <div class="productsDisplay">

    {{#each allProducts}}
      <div class="card" style="width: 18rem;">
        <a href="/products/{{_id}}"><img src="{{images}}" class="card-img-top" alt="{{productName}}" /></a>
        <div class="card-body">
          <a href="/products/{{_id}}"><h5 class="card-title">{{productName}}</h5></a>
          <p class="card-text">£{{price}}</p>
          <div class="buttonProducts">
          <form method="POST" action="/profile/add-to-favourites/{{_id}}">
            <button class="btn btn-success" type="submit">add to favourites</button>
          </form>
          </div>
        </div>
      </div>

