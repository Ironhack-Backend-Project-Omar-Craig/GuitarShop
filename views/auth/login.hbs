<div id="form">
  <h2>Login</h2>
  <form action="/login" method="POST">
    <label>Email
      <input name="email" placeholder="enter your email" />
    </label>
    <label>Password
      <input type="password" name="password" placeholder="*****" />
    </label>
    <button type="submit">Log In</button>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>