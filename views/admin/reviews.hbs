{{#if areThereAnyReviews}}

<div class="container">

<h1>Welcome {{currentUser.name}}</h1>
      <h3 id="reviewHeader" class="border-bottom">Customer Reviews</h3>

      <div>
      {{#each reviews}}
<p><b>{{writtenBy}}</b></p>
<form action="/admin/reviews/{{_id}}/edit" method="GET">
      <button type="submit">click to edit </button>
      </form>

        <p>{{text}}</p>
        <p>{{stars}} stars</p>
        <span class="border-bottom">{{dateCreated}}</span>
      
          <div id="individualProductImg">
      <h2>{{thisReviewIsAbout.productName}}</h2>
      <img
        src="{{thisReviewIsAbout.images.first}}"
        alt={{thisReviewIsAbout.productName}}
        class="img-thumbnail mx-auto d-block">
    </div>
      {{/each}}
      </div>

            

{{else}}
<div>You have not reviewed any products</div>
</div>

{{/if}}





